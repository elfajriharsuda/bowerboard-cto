generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id          String     @id @default(cuid())
  url         String     @unique
  title       String
  description String?
  faviconUrl  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categories  Category[]
  tags        Tag[]
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  sites Site[]
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  sites Site[]
}
