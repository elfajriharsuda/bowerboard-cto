# Database connection string (PostgreSQL)
# Example for local Postgres: postgres://USER:PASSWORD@localhost:5432/bookmarks
# Example for Neon/Render/etc. Obtain from your provider dashboard
DATABASE_URL="postgres://user:password@localhost:5432/bookmarks"

# Metadata fetch configuration
# Timeout in milliseconds for metadata fetches (used by /api/metadata)
METADATA_TIMEOUT_MS=8000
# Custom user agent when fetching site metadata
METADATA_USER_AGENT="BookmarkMetadataFetcher/1.0"
